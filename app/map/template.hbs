{{#leaflet-map zoomControl=false attributionControl=false lat=40.8643221 lng=-73.84338199999999 zoom=10}}
  {{tile-layer url='https://{s}.tiles.mapbox.com/v3/edborden.02o36pf8/{z}/{x}/{y}.png'}}
  {{#each model as |event|}}
    {{#event-pin event=event lat=event.latitude lng=event.longitude}}
      <h4>{{event.name}}</h4>
      <p>Rats: {{event.ratCount}}</p>
      <p>Trash: {{event.trashCount}}</p>
      <p>Tainted waters: {{event.dirtyWaterCount}}</p>
    {{/event-pin}}
  {{/each}}
{{/leaflet-map}}